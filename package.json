{
  "name": "brainstorm",
  "version": "1.0.0",
  "description": "Project tracking and brainstorming repository",
  "scripts": {
    "format": "prettier --write \"**/*.{md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{md,yml,yaml}\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint": "npm run lint:md",
    "test": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.13.0",
    "prettier": "^3.2.5"
  }
}
